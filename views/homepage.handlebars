<!-- Loop over each object in the projects array -->
{{#each blogs as |blog| }}
<div class="row mb-4 blog">
  <div class="col-md-5">
    <h2>
      <a href="/comments/{{blog.id}}">{{blog.name}}</a>
    </h2>
    <p>
      {{blog.description}}
    </p>
  </div>
  <div class="col-md-2">
    <p>Written by {{blog.user.name}} On {{format_date blog.date_created}}</p>
  </div>
</div>
{{/each}}
