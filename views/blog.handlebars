<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Written by {{user.name}} on {{format_date date_created}}</p>


  <div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog:</h3>

    <form class="form update-blog-form">
    <label for="title">
     Name:
    </label>
    <br />
    <textarea id="title" name="title" rows="2" cols="30">{{name}}</textarea>
    <br />
    <label for="title-desc">
      Description:
    </label>
    <br />
    <textarea id="title-desc" name="title-desc" rows="5" cols="30">{{description}}</textarea>
    <br />
    <button type="submit" value="Submit">
      Submit
    </button>
  </form>

  </div>
</div>

 
</div>
<script src="/js/updatedBlog.js"></script>


